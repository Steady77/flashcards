{
	"compilerOptions": {
		"target": "es2018",
		"lib": ["ES6"],
		"rootDir": "./src",
		"moduleResolution": "Node",
		"allowJs": true,
		"outDir": "./build",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"files": ["src/types/express/index.d.ts"],
	"exclude": ["node_modules"],
	"lib": ["esnext"],
	"ts-node": {
		"esm": true
	}
}
